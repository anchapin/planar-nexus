{
  "name": "Planar Nexus",
  "short_name": "PlanarNexus",
  "description": "A Magic: The Gathering Commander/EDH digital tabletop experience",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["fullscreen", "minimal-ui"],
  "background_color": "#0f0f1a",
  "theme_color": "#4f46e5",
  "orientation": "any",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "categories": ["games", "entertainment"],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Play Single Player",
      "url": "/single-player",
      "description": "Start a new single player game"
    },
    {
      "name": "Deck Builder",
      "url": "/deck-builder",
      "description": "Build and manage your decks"
    },
    {
      "name": "Join Multiplayer",
      "url": "/multiplayer/browse",
      "description": "Browse public multiplayer games"
    }
  ],
  "share_target": {
    "action": "/deck-builder",
    "method": "GET",
    "params": {
      "import": "decklist"
    }
  }
}
